<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/barra</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="estilo_literales">
        <item name="android:textSize">@dimen/literales</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="estilo_cuadro_dialogo">
        <item name="android:textSize">@dimen/tamano_texto_cuadro_dialogo</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="estilo_botones_menu">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_width">@dimen/tamano_botones_menu</item>
        <item name="android:layout_height">@dimen/tamano_botones_menu</item>
    </style>
    <style name="estilo_espacio_botones_menu">
        <item name="android:layout_width">@dimen/espacio</item>
        <item name="android:layout_height">1dp</item>
    </style>

</resources>
